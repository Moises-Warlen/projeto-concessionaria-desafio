<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <style>
       * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    display: flex;
    min-height: 100vh;
    background-color: #e3e9f7;
}

nav {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: #ffffff;
    height: 100vh;
    border-radius: 0px 18px 18px 0px;
    position: relative;
    transition: all 0.5s;
    min-width: 82px;
    z-index: 2;
}

#sidebar.open-sidebar {
    min-width: 15%;
    height:auto;
}

main {
    padding: 20px;
   
    z-index: 1;
    
}

#sidebar_content {
    padding: 12px;
}

#user {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 24px;
}

#user_avatar {
    width: 49px;
    height: 44px;
    object-fit: cover;
    border-radius: 1px;
}

#user_infos {
    display: flex;
    flex-direction: column;
}

#user_infos span:last-child {
    color: #6b6b6b;
    font-size: 12px;
}
 
#side_items {
    display: flex;
    flex-direction: column;
    gap: 8px;
    list-style: none;
}

.side-item {
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.side-item.active {
    background-color: #007bff;
    
}

.side-item:hover {
    background-color: #ecf5f7; 
}

.side-item a {
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 14px; 
    color: #0a0a0a;
    transition: color 0.3s; 
}

.side-item.active a {
    color: #e3e9f7;
}

.side-item a i {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 16px; 
    height: 16px; 
    color: #007bff; 
}

.dropdown {
    display: none;
    flex-direction: column;
    gap: 8px;
    padding-left: 20px;
    list-style-type: none;
}

.dropdown.active {
    display: flex;
}

.dropdown-icon {
    margin-left: auto;
    transition: transform 0.3s ease;
    font-size: 12px;
    color: #007bff; 
}

.side-item.active .dropdown-icon {
    transform: rotate(180deg);
}

#logout {
    border-top: 1px solid #e3e9f7;
    padding: 12px;
}

#logout_btn {
    border: none;
    padding: 12px;
    font-size: 14px;
    display: flex;
    gap: 20px;
    align-items: center;
    border-radius: 8px;
    text-align: start;
    cursor: pointer;
    background-color: transparent;
}

#open_btn {
    position: absolute;
    top: 30px;
    right: -10px;
    background-color: #007bff;
    color: #e3e9f7;
    border-radius: 100%;
    width: 20px;
    height: 20px;
    border: none;
    cursor: pointer;
}

#open_btn_icon {
    transition: transform 0.3s ease;
}

.open-sidebar #open_btn_icon {
    transform: rotate(180deg);
}

.item-description {
    width: 0px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 14px;
    transition: width 0.6s;
    height: 0px;
}

#sidebar.open-sidebar .item-description {
    width: 150px;
    height: auto;
}

#sidebar.open-sidebar .side-item a {
    justify-content: flex-start;
    gap: 14px;
}

#item_list {
    margin-top: 20px;
}

.item {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    background: white;
    border-radius: 5px;
    margin-bottom: 10px;
}

.item button {
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    background-color: #007bff;
    color: white;
}

#controls {
    display: flex;
    gap: 10px;
    margin-top: 20px;
}

#controls button {
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    background-color: #4f46e5;
    color: white;
    border: none;
}

container body-content{
    background-color:rebeccapurple !important;
}

    </style>
</head>
<body>
    <nav id="sidebar">
        <div id="sidebar_content">
            <div id="user">
                <img src="~/IMG/carLogo.png" id="user_avatar" alt="Avatar">
                <p id="user_infos">
                   <span class="item-description" style="font-weight: bold; font-size: 1.2em;">Moises</span>

                </p>
            </div>
            <ul id="side_items">
                <li class="side-item active">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa-solid fa-car" style="color: white;"></i>
                        <span class="item-description">Concessionaria</span>
                    </a>
                </li>
                <li class="side-item" id="user_item">
                    <a href="javascript:void(0);">
                        <i class="fa-solid fa-file-circle-plus"></i>
                        <span class="item-description">Cadastros</span>
                        <i class="fa-solid fa-chevron-down dropdown-icon"></i>
                    </a>
                    <ul class="dropdown" id="user_dropdown">
                        <li class="side-item"><a href="@Url.Action("Index", "Marca")">Marca</a></li>
                        <li class="side-item"><a href="@Url.Action("Index", "Modelo")">Modelo</a></li>
                        <li class="side-item"><a href="@Url.Action("Index", "Estoque")">Estoque</a></li>
                        <li class="side-item"><a href="@Url.Action("Index", "Cliente")">Cliente</a></li>
                        <li class="side-item"><a href="@Url.Action("Index", "Venda")">Venda</a></li>

                         <li class="side-item"><a href="@Url.Action("Index", "Asunto")">Modelo</a></li>
            


                    </ul>

                </li>
              
                <li class="side-item">
                    @*<a href="@Url.Action("Sobre", "Home")">*@
                    <a  hole="button" onclick="sobre.paginasobre()">
                        <i class="fa-solid fa-info-circle"></i>
                        <span class="item-description">Sobre</span>
                    </a>
                </li>
            </ul>
            <button id="open_btn">
                <i id="open_btn_icon" class="fa-solid fa-chevron-right"></i>
            </button>
        </div>
        <div id="logout">
            <button id="logout_btn">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="item-description">Logout</span>
            </button>
        </div>
    </nav>
    <main class="container">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>

        </div>
    </main>
    <script>
        document.getElementById('user_item').addEventListener('click', function() {
            document.getElementById('user_dropdown').classList.toggle('active');
        });
        document.getElementById('consultar_item').addEventListener('click', function() {
            document.getElementById('consultar_dropdown').classList.toggle('active');
        });
        document.getElementById('open_btn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open-sidebar');
        });
    </script>

    <script src="~/Lib/sobre/sobre.js"></script>

    <script>
sobre.init({
    urls: {
        paginasobre: '@(Url.Action("Sobre", "Home"))'
    }
});
    </script>

</body>
</html>
