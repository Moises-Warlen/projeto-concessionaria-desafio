


<div class="container">
    <h1>Cadastro de Cliente</h1>
    <form id="form-cliente">
        <!-- Informações Gerais -->
        <div class="section">
        
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" placeholder="Digite o CPF" required >

            <label for="nome">Nome Completo:</label>
            <input type="text" id="nome" name="nome" placeholder="Digite o nome completo" required>

            <label for="data-nascimento">Data de Nascimento:</label>
            <input type="date" id="data-nascimento" name="data-nascimento" required>
        </div>

        <!-- Dados de Contato -->
        <div class="section">
            <h2>Dados de Contato</h2>

            <!-- Email -->
            <div class="email-section">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Digite o e-mail" required>
                <button type="button" id="add-email">Adicionar Email</button>
                <div id="emails-list"></div>
            </div>

            <!-- Telefone -->
            <div class="telefone-section">
                <label for="telefone-ddd">Telefone:</label>
                <input type="text" id="telefone-ddd" name="telefone-ddd" placeholder="DDD" maxlength="2" required>
                <input type="text" id="telefone-numero" name="telefone-numero" placeholder="Número" maxlength="9" required>
                <input type="text" id="telefone-numero" name="telefone-numero" placeholder="Número" maxlength="9" required>
                <button type="button" id="add-telefone">Adicionar Telefone</button>
                <div id="telefones-list"></div>
            </div>

            <!-- Endereço -->
            <div class="endereco-section">
                <label for="cep">CEP:</label>
                <input type="text" id="cep" name="cep" placeholder="Digite o CEP" maxlength="8" required>

                <label for="rua">Rua:</label>
                <input type="text" id="rua" name="rua" placeholder="Digite a rua" required>

                <label for="numero">Número:</label>
                <input type="text" id="numero" name="numero" placeholder="Número" required>

                <label for="bairro">Bairro:</label>
                <input type="text" id="bairro" name="bairro" placeholder="Bairro" required>

                <label for="cidade">Cidade:</label>
                <input type="text" id="cidade" name="cidade" placeholder="Cidade" required>
                <button type="button" id="add-endereco">Adicionar Endereço</button>
                <div id="enderecos-list"></div>
            </div>
        </div>

        <button type="submit" id="submit-btn">Cadastrar</button>
    </form>
</div>
