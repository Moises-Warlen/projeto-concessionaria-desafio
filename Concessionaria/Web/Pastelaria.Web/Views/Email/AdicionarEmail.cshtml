
@{ Layout = null; }
@using System.Linq

<h4> Adicionar Email</h4>

<div class="row">
    <div  class="col-sm-4 mb-2">
        <label for="email" class="sr-only">Email</label>
        <input type="text" class="form-control" id="email" placeholder="Email" name="Email">
    </div>

</div>
<br />
<hr />


<a onclick="$('div#formEmail').hide()" class="btn btn-warning btn-sm" title="cancelar e voltar para lista de clientes">
    <i class="fas fa-xmark"></i>
</a>

<button type="button" class="btn btn-success btn-sm" title="salvar cliente" onclick="clientes.inserirEmail();">
    <i class="fas fa-save icon-save"></i>
</button>
